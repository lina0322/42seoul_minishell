	"version": "0.2.0",
	"configurations": [
		{
			"name": "gcc - 활성 파일 빌드 및 디버그",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/minishell",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "lldb", // for 리나
		//	"MIMode": "gdb",  // for 다솜
			"setupCommands": [
				{
					"description": "gdb에 자동 서식 지정 사용",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"preLaunchTask": "C/C++: gcc 활성 파일 빌드",
		//	"miDebuggerPath": "/usr/bin/gdb" // for 다솜
		}
	]
}